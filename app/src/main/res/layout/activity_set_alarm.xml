<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetAlarm"
    android:background="#1A1817">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="508dp"
        android:theme="@style/timepicker"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/saveTime"
        android:onClick="OnToggleClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="Speichern"
        android:width="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkMo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange"
        android:layout_marginRight="310dp" />
    <CheckBox
        android:id="@+id/checkDi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Di"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange"
        android:layout_marginRight="200dp" />
    <CheckBox
        android:id="@+id/checkMi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange"
        android:layout_marginRight="100dp" />
    <CheckBox
        android:id="@+id/checkDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange" />
    <CheckBox
        android:id="@+id/checkFr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fr"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange"
        android:layout_marginLeft="100dp" />
    <CheckBox
        android:id="@+id/checkSa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sa"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange"
        android:layout_marginLeft="200dp" />
    <CheckBox
        android:id="@+id/checkSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="440dp"
        android:textColor="@color/white"
        android:buttonTint="@color/orange"
        android:layout_marginLeft="300dp" />

    <EditText
        android:id="@+id/alarmbezeichnung"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Alarmbezeichnung"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="350dp"
        android:backgroundTint="@color/orange"/>



</androidx.constraintlayout.widget.ConstraintLayout>